<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Post</title>
    <link href="/css/index.css" rel="stylesheet" />
  </head>

  <body class="bg-slate-100 text-slate-800 min-h-screen">

    <!-- Navbar -->
    <nav class="bg-blue-600 text-white px-6 py-4 shadow">
      <h1 class="text-2xl font-bold">Postify</h1>
    </nav>

    <!-- Main Container -->
    <main class="max-w-2xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">

      <h2 class="text-2xl font-semibold text-slate-900 mb-6">
        Create a New Post
      </h2>

      <!-- Create Post Form -->
      <form action="/post" method="post" class="space-y-5">

        <!-- Username -->
        <div>
          <label class="block mb-1 font-medium text-slate-700">
            Username
          </label>
          <input
            type="text"
            name="username"
            placeholder="Enter username"
            required
            class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Content -->
        <div>
          <label class="block mb-1 font-medium text-slate-700">
            Post Content
          </label>
          <textarea
            name="content"
            rows="6"
            placeholder="Write your post..."
            required
            class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition"
        >
          Submit Post
        </button>

      </form>

    </main>
  </body>
</html>
